{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2017",
    "baseUrl": "./",
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/local-types"
  ],
  "exclude": [
    "node_modules",
    "src/local-types/**"
]
}